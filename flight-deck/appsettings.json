{
    // Keep your existing Logging section for ASP.NET Core's built-in logging if needed,
    // but Serilog's config below will generally take precedence when UseSerilog is active.
    "Logging": {
        "LogLevel": {
            "Default": "Information", // Default level for non-Microsoft/System logs
            "Microsoft.AspNetCore": "Warning"
        }
    },
    // Add a "Serilog" section for its configuration
    "Serilog": {
        "MinimumLevel": {
            "Default": "Trace", // Default minimum level Serilog will process
            "Override": {
                "Microsoft": "Warning", // Override for Microsoft namespaces
                "Microsoft.Hosting.Lifetime": "Information",
                "FlightDeck.Services": "Debug" // Example: Set specific level for your services
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ], // Optional enrichers
        "WriteTo": [
            { "Name": "Console" }, // Simple console sink
            {
                "Name": "File", // File sink configuration
                "Args": {
                    "path": "Logs/flightdeck-.log", // Log file path
                    "rollingInterval": "Day", // Create a new log file daily
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Properties:j}{NewLine}{Exception}", // Example template
                    "retainedFileCountLimit": 7, // Keep logs for 7 days
                    "buffered": true, // Buffer writes for performance
                    "flushToDiskInterval": "00:00:01" // Flush buffer every second
                }
            }
        ]
    },
    "AllowedHosts": "*"
}